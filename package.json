{
  "scripts": {
    "copy-asset": "cpx 'public/**' dist/public",
    "build": "npm run copy-asset && webpack",
    "watch": "npm-watch",
    "dev": "concurrently --raw \"npm run dev:server\" \"npm run build && npm run watch\"",
    "dev:server": "http-server ./dist/public",
    "clean": "rimraf dist"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "public"
      ],
      "extensions": "ts,tsx,html,js,json"
    }
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cpx2": "^4.2.0",
    "npm-watch": "^0.11.0",
    "react-router-dom": "^6.8.2",
    "rimraf": "^4.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "http-server": "^14.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
